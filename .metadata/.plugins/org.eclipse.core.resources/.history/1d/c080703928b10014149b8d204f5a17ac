package com.mydomain;
import lejos.nxt.*;
import lejos.robotics.subsumption.*;

public class Junction implements Behavior{

	private boolean  suppressed = false;
	Rotate r = new Rotate();
	Movement m = new Movement();
	LightSensor lsLeft = new LightSensor(SensorPort.S4);
	LightSensor lsRight = new LightSensor(SensorPort.S1);
	double leftHowDark = ((lsLeft.getLightValue()/lsLeft.getHigh())*100);
	double rightHowDark = ((lsRight.getLightValue()/lsRight.getHigh())*100);
	
	public String test()
	{
		return leftHowDark + " & " + rightHowDark;
	}
	
	@Override
	/*public boolean takeControl() {
		return lsLeft.getLightValue() <= 20 && lsRight.getLightValue() <= 20;
	}*/
	
	public boolean takeControl() {
		return leftHowDark <= 50 && rightHowDark <= 50;
	}

	@Override
	public void action() {
		suppressed = false;
		r.rotateLeft(90);
		while(!suppressed)
			Thread.yield();
		m.stop();
	}

	@Override
	public void suppress() {
		suppressed = true;
	}

}
